<VirtualHost {{virtualHost}}:80>
  {{#if serverName}}ServerName {{serverName}}{{/if}}
  {{#if ServerAlias}}ServerAlias {{ServerAlias}}{{/if}}
  {{#if documentRoot}}DocumentRoot {{documentRoot}}

  <Directory "{{documentRoot}}">
      Options Indexes FollowSymLinks
      allow from all
      Options -Indexes
      Options +FollowSymLinks
  </Directory>
{{/if}}
</VirtualHost>

{{#if ssl}}
<VirtualHost {{virtualHost}}:443>
  {{#if serverName}}ServerName {{serverName}}{{/if}}
  {{#if ServerAlias}}ServerAlias {{ServerAlias}}{{/if}}


  SSLEngine On
  SSLCertificateFile /etc/apache2/ssl/binaryalchemist.crt
  SSLCertificateKeyFile /etc/apache2/ssl/binaryalchemist.key

  {{#if documentRoot}}DocumentRoot {{documentRoot}}
  <Directory "{{documentRoot}}">
      Options Indexes FollowSymLinks
      allow from all
      Options -Indexes
      Options +FollowSymLinks
  </Directory>
{{/if}}
</VirtualHost>
{{/if}}
