<div class="tab-content">

  <div class="tab-pane active" id="home">
    <div class="form-group">
      <label for="serverName">Server Name</label>
      <input type="text" name="serverName" id="serverName" class="form-control" value="{{serverName}}" />
    </div>

    <div class="form-group">
      <label for="virtualHost-tgl">Virtual Host</label>
      <input type="checkbox" id="virtualHost-tgl" checked="checked" class="form-control checkbox-inline" />
      <span>same as server name</span>
      <input    name="virtualHost"
                type="text"
                class="form-control"
                style="display:none;"
                placeholder="127.0.0.1"
                disabled="disabled"
                value="{{virtualHost}}" />
    </div>

    <label >Server Aliases</label>
    <textarea name="ServerAlias" class="form-control" rows="1">{{ServerAlias}}</textarea>

    <label>Document Root</label>
    <input type="text" name="documentRoot" class="form-control" value="{{documentRoot}}" />
  </div>

  <div class="tab-pane" id="mod-ssl">

    <input type="hidden" name="ssl" value="ssl" class="ssl"/>

    <label for="certFile" >Certificate File</label>
    <input type="text" name="certFile" id="certFile" class="form-control" />
    <br/>
    <label for="keyFile">Key File</label>
    <input type="text" name="keyFile" id="keyFile" class="form-control" />

  </div>

  <div class="tab-pane" id="mod-rewrite"></div>

</div>
