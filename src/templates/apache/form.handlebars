<div class="tab-content">

  <div class="tab-pane active" id="home">

    <div class="form-group">
      <label for="site.documentRoot">Document Root</label>
      <input type="text" name="site.documentRoot" class="form-control" value="{{site.documentRoot}}" />
    </div>

    <div class="form-group">
      <label for="site.serverName">Server Name</label>
      <input type="text" name="site.serverName" id="serverName" class="form-control" value="{{site.serverName}}" />
    </div>

    <div class="form-group">
      <label for="virtualHost-tgl">Virtual Host</label>
      <input    name="site.virtualHost"
                type="text"
                class="form-control"
                placeholder="127.0.0.1"
                id="virtualHost-tgl"
                value="{{site.virtualHost}}" />
    </div>

    <div class="form-group">
      <label >Server Aliases</label>
      <textarea name="site.serverAlias" class="form-control" rows="1">{{site.serverAlias}}</textarea>
    </div>


  </div>

  <div class="tab-pane" id="mod-ssl">

    <div class="form-group">
      <label for="mod.ssl.enabled" >SSL is</label>
      <select name="mod.ssl.enabled" id="mod.ssl.enabled" class="form-control">
        <option value="">Disabled</option>
        <option value="enabled">Enabled</option>
        <option value="required">Required</option>
      </select>
    </div>

    <span id="mod-ssl-wrapper" style="display:none;">
      <div class="form-group">
        <label for="mod.ssl.cert" >Certificate File</label>
        <input type="text" name="mod.ssl.cert" id="mod.ssl.cert" class="form-control" value="{{mod.ssl.cert}}" />
      </div>

      <div class="form-group">
        <label for="mod.ssl.key">Key File</label>
        <input type="text" name="mod.ssl.key" id="mod.ssl.key" class="form-control" value="{{mod.ssl.key}}" />
      </div>
    </span>

  </div>

  <div class="tab-pane" id="mod-rewrite"></div>

</div>
